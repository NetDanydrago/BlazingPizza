<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView 
                 RouteData="@routeData" 
                 DefaultLayout="@typeof(MainLayout)" >
                <NotAuthorized>
                    <div class="main">
                        <h2>No has iniciado sesion.</h2>
                        <p>Para continuar, por favor inicia sesión</p>
                        <a class="btn btn-danger"
                           href="user/signin?redirectUri=/MyOrders">Iniciar Sesión</a>
                    </div>
                </NotAuthorized>
                <Authorizing>
                    Espera Por Favor...
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Lo Lamentamos, el recurso solicitado no ha sido encontrado</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
